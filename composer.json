{
    "require": {
        "guzzlehttp/guzzle": "^7.8",
        "vlucas/phpdotenv": "^5.6",
        "symfony/yaml": "^7.1"
    },
    "autoload": {
        "psr-4": {"Referat\\": "includes/"}
    },
    "scripts": {
        "dev" : [
            "php -S localhost:8000",
            "Composer\\Config::disableProcessTimeout"
